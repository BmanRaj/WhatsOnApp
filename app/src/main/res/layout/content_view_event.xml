            android:paddingBottom="5dp"
            android:layout_height="wrap_content"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:id="@+id/event_time"
            android:layout_height="72dp">

            <ImageView
                android:id="@+id/time_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="32dp"
                android:src="@drawable/ic_time"
                android:layout_centerVertical="true" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/time_icon"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/date_header"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:text="Date and Time"/>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Start: "
                        android:id="@+id/start_text"/>

                    <TextView
                        android:id="@+id/start_date_text"
                        android:layout_width="wrap_content"
                        android:textSize="15sp"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/start_text"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:id="@+id/start_time_text"
                        android:textSize="15sp"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/start_date_text"
                        android:layout_marginLeft="4sp"/>


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="End: "
                        android:id="@+id/end_text"/>

                    <TextView
                        android:id="@+id/end_date_text"
                        android:layout_width="wrap_content"
                        android:textSize="15sp"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/end_text"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:id="@+id/end_time_text"
                        android:textSize="15sp"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/end_date_text"
                        android:layout_marginLeft="4sp"/>


                </RelativeLayout>


            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:id="@+id/event_category"
            android:layout_height="72dp">

            <ImageView
                android:id="@+id/category_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="32dp"
                android:src="@drawable/ic_event_category"
                android:layout_centerVertical="true" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/category_icon"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/category_header"
                    android:layout_width="wrap_content"
                    android:textSize="15sp"
                    android:layout_height="wrap_content"
                    android:text="Category"
                    android:textStyle="bold"
                    />

                <TextView
                    android:id="@+id/category_text"
                    android:layout_width="wrap_content"
                    android:textSize="15sp"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
