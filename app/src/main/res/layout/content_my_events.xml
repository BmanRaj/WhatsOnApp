<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.MyEventsActivity"
    tools:showIn="@layout/app_bar_my_events"
    app:layout_behavior="@string/appbar_scrolling_view_behavior" >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/starred_events"
            android:paddingTop="30dp"
            android:paddingStart="15dp"
            android:paddingBottom="15dp"
            android:textSize="30sp"/>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="200dp"
            android:clipToPadding="false" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="My Recommended Events"
            android:paddingTop="15dp"
            android:paddingStart="15dp"
            android:paddingBottom="15dp"
            android:textSize="30sp"/>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_view4"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="200dp"
            android:clipToPadding="false" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/events_ive_hosted"
            android:paddingTop="15dp"
            android:paddingStart="15dp"
            android:paddingBottom="15dp"
            android:textSize="30sp"/>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_view2"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="200dp"
            android:clipToPadding="false" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/past_events"
            android:paddingTop="15dp"
            android:paddingStart="15dp"
            android:paddingBottom="15dp"
            android:textSize="30sp"/>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_view3"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="200dp"
            android:clipToPadding="false" />

    </LinearLayout>

</ScrollView>